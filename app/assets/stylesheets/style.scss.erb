// Variables

$hidden: hidden;
$bg_contain: contain;
$bg_cover: cover;
$center: center;
$no_repeat: no-repeat;
$both: both;
$none: none;
$full: 100%;
$zero: 0;
$half: 50%;
$bold: 700;

$white: #fff;

// Globals

input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0 500px white inset !important;
    -webkit-text-fill-color: #333;
}

img {
  max-width: $full;
}

.hero {
  background-image: image-url("<%= asset_path('geo.svg') %>");
  height: 40em;
  background-repeat: $no_repeat;
  background-size: $bg_cover;
  background-position: top;
}

.no-p {
  padding: $zero;
}

// Flip circle in home page

.flip {
  perspective: 1000;
  -webkit-perspecitve: 1000;
  -ms-perspective: 1000;
  position: relative;
  height: 10em;
}

.flip:hover .cont {
  -ms-transform: rotateY(180deg);
  -webkit-transform: rotateY(180deg);
  transform: rotateY(180deg);
}

.flip, .flip .front, .flip .back {
  height: 15em;
  width: 15em;
  padding: 2.1em;
}

.cont {
  position: absolute;
  top: -1em;
  left: 0;
  width: 15em;
  -webkit-transition: 0.7s;
  transition: 0.7s;
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
}

.front, .back {
  margin: auto;
  -webkit-backface-visibility: $hidden;
  backface-visibility: $hidden;
  box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 
  0 2px 10px 0 rgba(0, 0, 0, 0.12);
}

.front {
  z-index: 2;
}

.front p {
  font-size: 2.2em;
  font-weight: bold;
  line-height: 1;
  margin: 0 auto;
  padding-top: 1.5em;
}

.front i {
  padding-left: 1.3em;
  font-weight: bold;
  font-size: 3em;
}

.back {
  -ms-transform: rotateY(180deg);
  -webkit-transform: rotateY(180deg);
  transform: rotateY(180deg);
}

.back p {
  font-weight: bold;
}

// Search

.home-search {
  margin-top: 5em;
  margin-left: 3em !important;
}

.search {
  font-size: 4em !important;
}

.search_input {
  border-width: .5em !important;
}

// Products

.product {
  // overflow: $hidden;
  padding: 6em .7em !important;

  h2 {
    text-align: $center;
  }

  .product-image {
    height: 25em; 
    background-size: $bg_contain;
    background-position: $center;
    background-repeat: $no_repeat;
  }

  .btn {
    border-radius: 50%;
    padding: 0 .5rem;
  }
}

.product-list {
  padding: 1em .5em;

    .product-image-list {
    @extend .product-image;
    height: 4em;
    border-radius: $half;
    background-size: $bg_cover;
  }
}

.user-img {
  clear: $both !important;
  float: $none !important;
  margin-top: 2em;
}

.profile {
  height: 10em;
  border-radius: $half;
  background-size: $bg_cover;
  background-position: $center;
}

.search-form {
  padding-top: 15em;
}
