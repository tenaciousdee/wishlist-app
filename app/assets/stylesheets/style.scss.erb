// Variables

$hidden: hidden;
$bg_contain: contain;
$bg_cover: cover;
$center: center;
$no_repeat: no-repeat;
$full: 100%;
$zero: 0;
$half: 50%;
$bold: 700;

$white: #fff;

// Globals

input:-webkit-autofill {
    -webkit-box-shadow: 0 0 0 500px white inset !important;
    -webkit-text-fill-color: #333;
}

img {
  max-width: $full;
}

.hero {
  background-image: image-url("<%= asset_path('home.jpg') %>");
  height: 45.5em;
  background-repeat: $no_repeat;
  background-size: $bg_cover;
  background-position: top;
}

// Search

.search {
  font-size: 4em !important;
}

.search_input {
  border-width: .5em !important;
}

// Products

.product {
  // overflow: $hidden;
  padding: 6em .7em !important;

  h2 {
    text-align: $center;
  }

  .product-image {
    height: 25em; 
    background-size: $bg_contain;
    background-position: $center;
    background-repeat: $no_repeat;
  }

  .btn {
    border-radius: 50%;
    padding: 0 .5rem;
  }
}

.product-list {
  padding: 1em .5em;

    .product-image-list {
    @extend .product-image;
    height: 4em;
    border-radius: $half;
    background-size: $bg_cover;
  }
}

.profile {
  height: 10em;
  border-radius: $half;
  background-size: $bg_cover;
  background-position: $center;
}
