<h1>Products</h1>

<div class="mdl-grid">
  <% @products["products"].each do |product| %>
  <div class="mdl-cell mdl-cell--4-col">
    <a href='/products/<%= product["id"] %>'>
      <div class="product-image-index" style="background-image: url('<%= product["image"]["sizes"]["Best"]["url"] %>');"></div></a>
      <p><%= product["name"] %></p>
    </div>
    <% end %>
  </div>