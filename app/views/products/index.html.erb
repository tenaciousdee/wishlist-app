<div class="mdl-layout__container">
<div class="mdl-grid">
  <% @products.each do |product| %>
  <div class="mdl-cell mdl-cell--4-col">
    <h2><%= product.name %></h2>
    <img src="<%= product.image %>" alt="product image" >
    <p><%= product.description %></p>
    <p><%= number_to_currency(product.price) %></p>
  </div>
  <% end %>
</div>
</div>