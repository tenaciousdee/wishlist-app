  <div class="mdl-grid">
    <div class="mdl-cell mdl-cell--8-col">
      <h1>Edit this product</h1>
      <%= form_tag "/products/#{@product.id}", method: :patch, multipart: true do %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--8-col">
        <%= label_tag :name, nil, class: "mdl-textfield__label" %>
        <%= text_field_tag :name, @product.name, class: "mdl-textfield__input" %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-cell--8-col">
        <%= label_tag :description, nil, class: "mdl-textfield__label" %>
        <%= text_area_tag :description, @product.description, class: "mdl-textfield__input" %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell--8-col">
        <%= label_tag :price, nil, class: "mdl-textfield__label" %>
        <%= text_field_tag :price, number_to_currency(@product.price), class: "mdl-textfield__input" %>
      </div>
      <div class="mdl-cell--8-col">
        <%= file_field_tag 'image' %>
      </div>
      <div class="mdl-cell--8-col">
        <%= button_tag "Edit Product", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" %>
      </div>
      <% end %>
    </div>
  </div>
</div>