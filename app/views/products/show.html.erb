<div class="row">
  <div class="col l8 product">
  <a target="_blank" href='<%= @product["clickUrl"] %>'>
    <div class="product-image" style="background-image: url('<%= @product["image"]["sizes"]["Original"]["url"] %>');"></div></a>
  </div>
  <div class="col l4">
    <h3><%= @product["name"] %></h3>
    <p><%= number_to_currency(@product["price"]) %></p>
    <!-- Add product to database form -->
    <%= form_tag '/products', method: :post do %>
    <div>
      <%= hidden_field_tag :product_id, @product["id"], placeholder: "Enter your Product ID" %>
    </div>
    <% if current_user %>
    <div>
      <%= collection_select :list, :list_id, current_user.lists, :id, :name, { prompt: "Choose a wish list" } %>
    </div>
    <div>
      <%= button_tag( :class => "btn red lighten-3") do %>
      <i class="material-icons">add</i>
      <% end %>
    </div>
    <% end %>
    <% end %>
  </div>
  <!-- End form -->

</div>