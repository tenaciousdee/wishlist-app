<h2>Create an account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <i class="material-icons  left grey-text">face</i><div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <i class="material-icons  left grey-text">face</i><div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true %>
  </div>

  <i class="material-icons  left grey-text">email</i><div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <i class="material-icons  left grey-text">photo</i><div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, class: "file-field" %>
  </div>

  <i class="material-icons  left grey-text">lock</i><div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <i class="material-icons  left grey-text">lock</i><div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => 'grey btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
