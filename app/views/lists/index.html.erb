<h1>My Lists</h1>

<% if @lists.length > 0 %>
<div class="row">
  <% @lists.each do |list| %>
  <div class="col l12">
  <a href="/lists/<%= list.id %>"><h3><%= list.name %></h3></a>
  <p><%= list.description %></p>
  <% list.products.each do |product| %>
    <div class="col l1 product">
      <div class="product-image-list" style="background-image: url('<%= product.image_src %>');"></div>
    </div>
  <% end %>
  </div>
  <% end %>
</div>
<% end %>